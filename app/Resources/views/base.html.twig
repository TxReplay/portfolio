{% set curr_route = app.request.attributes.get('_route') %}

<!DOCTYPE html>
<html lang="fr-FR">
<head>
    <meta charset="{% block metaCharset %}utf-8{% endblock %}">
    <meta name="viewport" content="{% block metaViewport %}width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no{% endblock %}">

    <title>{% block title %}{% endblock %} | {{ content.name|raw }} - {{ content.job_title|raw }}</title>
    <meta name="description" content="{% block metaDescription %}{{ content.meta_description|raw }}{% endblock %}" />
    <meta name="keywords" content="{% block metaKeywords %}{{ content.keywords|raw }}{% endblock %}">
    <meta name="geo.placename" content="{% block metaGeoPlacename %}{{ content.city_complete|raw }}{% endblock %}">
    <meta name="robots" content="{% block metaRobots %}index,follow{% endblock %}">

    <meta name="author" content="{{ content.name|raw }}" />
    <meta name="copyright" content="{{ content.name|raw }}" />

    {% block favicon %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    {% endblock %}

    <!--[if lt IE 9]>
    <script src="{{ asset('bower_components/html5shiv/dist/html5shiv.js') }}"></script>
    <![endif]-->

    {% block twitterCard %}
        <meta name="twitter:card" content="{% block metaTwitterCard %}summary{% endblock %}" />
        <meta name="twitter:title" content="{% block metaTwitterTitle %}{{ content.name|raw }}{% endblock %}" />
        <meta name="twitter:description" content="{% block metaTwitterDescription %}{{ content.meta_description|raw }}{% endblock %}" />
        <meta name="twitter:image" content="{% block metaTwitterImage %}{% image 'images/circle_picture.png' %}{{ app.request.getSchemeAndHttpHost() ~ asset_url }}{% endimage %}{% endblock %}" />
        <meta name="twitter:site" content="{% block metaTwitterSite %}@{{ content.pseudo|raw }}{% endblock %}" />
        <meta name="twitter:creator" content="{% block metaTwitterCreator %}@{{ content.pseudo|raw }}{% endblock %}" />
    {% endblock %}

    {% block metaOg %}
        <meta property="og:title" content="{% block metaOgTitle %}{{ content.name|raw }}{% endblock %}" />
        <meta property="og:description" content="{% block metaOgDescription %}{{ content.meta_description|raw }}{% endblock %}" />
        <meta property="og:url" content="{% block metaOgUrl %}{% if curr_route is not empty %}{{ url(curr_route, app.request.attributes.get('_route_params')) }}{% else %}{{ url('homepage') }}{% endif %}{% endblock %}" />
        <meta property="og:type" content="{% block metaOgType %}website{% endblock %}" />
        <meta property="og:image" content="{% block metaOgImage %}{% image 'images/facebook.jpg' %}{{ app.request.getSchemeAndHttpHost() ~ asset_url }}{% endimage %}{% endblock %}" />
        <meta property="og:updated_time" content="{% block metaOgTime %}{{ 'today'|date('U') }}{% endblock %}" />
        <meta property="og:site_name" content="{% block metaOgSiteName %}{{ content.name|raw }}{% endblock %}" />
        <meta property="og:locality" content="{% block metaOgLocality %}{{ content.city|raw }}{% endblock %}" />
        <meta property="og:postal-code" content="{% block metaOgPostalCode %}{{ content.postal_code|raw }}{% endblock %}" />
        <meta property="og:country-name" content="{% block metaOgCountryName %}{{ content.country|raw }}{% endblock %}" />
        <meta property="og:email" content="{% block metaOgEmail %}{{ content.email_perso|raw }}{% endblock %}" />
        <meta property="og:locale" content="{% block metaOgLocale %}fr_FR{% endblock %}">
    {% endblock %}


    {% block fonts %}
        <link href="https://fonts.googleapis.com/css?family=Raleway:300,500,700" rel="stylesheet">
    {% endblock %}

    {% block stylesheets %}
        {% stylesheets
        'css/reset.css'
        'css/main.css'
        filter='cssrewrite' %}
            <link rel="stylesheet" href="{{ asset_url }}" />
        {% endstylesheets %}
    {% endblock %}
</head>

<body>
{% block body %}
    <header>
        <div class="wrapper">
            <h1 id="logo">txreplay.</h1>
            <nav>
                <ul>
                    <li>
                        <a href="{{ path('homepage') }}" {% if curr_route == 'homepage' %}class="active regular"{% endif %} data-tracking="menu-about">Ã€ propos</a>
                    </li>
                    <li>
                        <a href="{{ path('projects') }}" {% if curr_route == 'projects' %}class="active regular"{% endif %} data-tracking="menu-projects">Projets</a>
                    </li>
                    <li>
                        <a href="{{ path('contact') }}" {% if curr_route == 'contact' %}class="active regular"{% endif %} data-tracking="menu-contact">Contact</a>
                    </li>
                </ul>
            </nav>
            <img src="{% image 'images/circle_picture.png' %}{{ asset_url }}{% endimage %}" class="picture" alt="Logo">
            <h2 class="bold">{{ content.name|raw }}</h2>
            <h3 class="regular">{{ content.job_title|raw }}, {{ content.city|raw }}</h3>
        </div>
    </header>

    {% block content %}
    {% endblock %}
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('bower_components/jquery/dist/jquery.min.js') }}"></script>
{% endblock %}

{% block analytics %}
    <script>
        (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
                    (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
                m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
        })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

        ga('create', 'UA-47295321-1', 'auto');
        ga('send', 'pageview');
    </script>
    <script type="text/javascript">
        $(document).ready(function () {
            $("a[data-tracking]").on( "click", function() {
                var titre = $(this).attr("data-tracking");
                var page = document.title;
                ga("send", "event", titre, "Click", page);
            });
        });
    </script>
{% endblock %}
</body>
</html>